{% extends 'base.html.twig' %}
{% block title %}Listado de Siniestros{% endblock %}

{% block body %}
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="fw-bold">Listado de Siniestros</h1>

    {% if is_granted('ROLE_ADMIN') %}
      <a href="{{ path('siniestro_new') }}" class="btn btn-success">+ Nuevo Siniestro</a>
    {% endif %}
  </div>

  <table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Fecha</th>
        <th>Hora</th>
        <th>Clima</th>
        <th>Observaciones</th>
        <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {% for s in siniestros %}
        <tr>
          <td>{{ s.id }}</td>
          <td>{{ s.fecha|date('d/m/Y') }}</td>
          <td>{{ s.hora|date('H:i') }}</td>
          <td>{{ s.clima ? s.clima.descripcion : '-' }}</td>
          <td>{{ s.obs }}</td>
          <td class="text-center">
            <a href="{{ path('siniestro_show', { id: s.id }) }}" class="btn btn-sm btn-primary">Ver</a>

            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('siniestro_edit', { id: s.id }) }}" class="btn btn-sm btn-warning">Editar</a>
              <form method="post" action="{{ path('siniestro_delete', { id: s.id }) }}" style="display:inline-block;" onsubmit="return confirm('Â¿Seguro que deseas eliminar este registro?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ s.id) }}">
                <button class="btn btn-sm btn-danger">Eliminar</button>
              </form>
            {% endif %}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="6" class="text-center text-muted py-4">No hay siniestros registrados.</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
