{% extends 'base.html.twig' %}
{% block title %}Participantes del Siniestro{% endblock %}

{% block body %}
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="fw-bold">Participantes de Siniestros</h1>
    {% if is_granted('ROLE_ADMIN') %}
      <a href="{{ path('detalle_new') }}" class="btn btn-success">+ Nuevo Participante</a>
    {% endif %}
  </div>

  <table class="table table-striped table-hover shadow-sm align-middle">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Siniestro</th>
        <th>Persona</th>
        <th>Rol</th>
        <th>Fecha</th>
        <th>Clima</th>
        <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {% for d in detalles %}
        <tr>
          <td>{{ d.id }}</td>
          <td>{{ d.siniestro.id }}</td>
          <td>{{ d.persona.nombre }} {{ d.persona.apellido }}</td>
          <td>{{ d.rol.descripcion }}</td>
          <td>{{ d.siniestro.fecha ? d.siniestro.fecha|date('d/m/Y') : '-' }}</td>
          <td>{{ d.siniestro.clima ? d.siniestro.clima.descripcion : '-' }}</td>
          <td class="text-center">
            <a href="{{ path('detalle_show', { id: d.id }) }}" class="btn btn-sm btn-primary">Ver</a>

            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('detalle_edit', { id: d.id }) }}" class="btn btn-sm btn-warning">Editar</a>
              <form method="post" action="{{ path('detalle_delete', { id: d.id }) }}" style="display:inline-block;" onsubmit="return confirm('Â¿Seguro que deseas eliminar este registro?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ d.id) }}">
                <button class="btn btn-sm btn-danger">Eliminar</button>
              </form>
            {% endif %}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="7" class="text-center text-muted py-4">No hay registros</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
