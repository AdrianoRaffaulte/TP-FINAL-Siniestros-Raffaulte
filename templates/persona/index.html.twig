{% extends 'base.html.twig' %}

{% block title %}Listado de Personas{% endblock %}

{% block body %}
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="fw-bold">Listado de Personas</h1>

    {% if is_granted('ROLE_ADMIN') %}
      <a href="{{ path('persona_new') }}" class="btn btn-success">+ Nueva Persona</a>
    {% endif %}
  </div>

  <table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Sexo</th>
        <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {% for persona in personas %}
        <tr>
          <td>{{ persona.id }}</td>
          <td>{{ persona.nombre }}</td>
          <td>{{ persona.apellido }}</td>
          <td>{{ persona.sexo ? persona.sexo.descripcion : '-' }}</td>
          <td class="text-center">
            <a href="{{ path('persona_show', { id: persona.id }) }}" class="btn btn-sm btn-primary">Ver</a>

            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('persona_edit', { id: persona.id }) }}" class="btn btn-sm btn-warning">Editar</a>

              <form method="post" action="{{ path('persona_delete', { id: persona.id }) }}" style="display:inline-block;" onsubmit="return confirm('Â¿Seguro que deseas eliminar este registro?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ persona.id) }}">
                <button class="btn btn-sm btn-danger">Eliminar</button>
              </form>
            {% endif %}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5" class="text-center text-muted py-4">No hay personas registradas.</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
